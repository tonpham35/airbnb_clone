<div class="row" style="background-color: white; width: 500px; margin-top: 120px;">
<h1 style="padding-left: 20px;"><%= @users.first_name %> <%= @users.last_name %>' Profile</h1> 
<% if @users.profilepic.url != nil %>
<%= image_tag @users.profilepic.card.url %><br>
<% end %>
<span><%= @users.first_name %> <%= @users.last_name %></span>
<span><%= @users.email %></span>

<% if @users.listings.length > 0 %>
<% @users.listings.each do |listing| %>
<h1><%= listing.address1 %></h1>
<table border="1" class='text-center'>
  <thead>
    <tr>
      <th style="padding: 10px">Preview Pic</th>
      <th style="padding: 10px">User</th>
      <th style="padding: 10px">Address1</th>
      <th style="padding: 10px">Address2</th>
      <th style="padding: 10px">Postalcode</th>
      <th style="padding: 10px">State</th>
      <th style="padding: 10px">Country</th>
      <th style="padding: 10px">No bed</th>
      <th style="padding: 10px">No room</th>
      <th style="padding: 10px">Max guest</th>
      <th style="padding: 10px">Price per day</th>
      <th style="padding: 10px">Currency</th>
      <th style="padding: 10px">Content</th>
      <th style="padding: 10px">Smoker</th>
      <th style="padding: 10px">Pets</th>
      <th style="padding: 10px">Instant book</th>
      <th style="padding: 10px">Property type</th>
      <th style="padding: 10px">Name</th>
      <th colspan="3">Updates</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td style="padding: 10px"><% if listing.photos.length > 0 %>
          <%=image_tag listing.photos[0].thumb.url, class:"listing-preview"%>
            <% else %>
              <span class="glyphicon glyphicon-picture"></span>
            <% end %></td>
        <td style="padding: 10px"><%= listing.user.first_name%> <%=listing.user.last_name %></td>
        <td style="padding: 10px"><%= listing.address1 %></td>
        <td style="padding: 10px"><%= listing.address2 %></td>
        <td style="padding: 10px"><%= listing.postalcode %></td>
        <td style="padding: 10px"><%= listing.state %></td>
        <td style="padding: 10px"><%= listing.country %></td>
        <td style="padding: 10px"><%= listing.no_bed %></td>
        <td style="padding: 10px"><%= listing.no_room %></td>
        <td style="padding: 10px"><%= listing.max_guest %></td>
        <td style="padding: 10px"><%= listing.price_per_day %></td>
        <td style="padding: 10px"><%= listing.currency %></td>
        <td style="padding: 10px"><%= listing.content %></td>
        <td style="padding: 10px"><%= listing.smoker %></td>
        <td style="padding: 10px"><%= listing.pets %></td>
        <td style="padding: 10px"><%= listing.instant_book %></td>
        <td style="padding: 10px"><%= listing.property_type %></td>
        <td style="padding: 10px"><%= listing.name %></td>
        <td style="padding: 10px"><%= link_to 'Show', listing %></td>
        <td style="padding: 10px"><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td style="padding: 10px"><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    
  </tbody>
</table>

<% if listing.reservations.length > 0 %>
<h1><%= listing.address1 %>'s Reservations</h1>
<table border="1" class='text-center'>
  <thead>
    <tr>
      <th style="padding: 10px">Guest Profile Pic</th>
      <th style="padding: 10px">Main Guest</th>
      <th style="padding: 10px">Start Date</th>
      <th style="padding: 10px">End Date</th>
      <th style="padding: 10px">Number Guest</th>
      <th style="padding: 10px">Total Price</th>
      <th style="padding: 10px">Note:</th>
      <th colspan="2">Updates</th>
    </tr>
  </thead>
  <tbody>
    <% listing.reservations.each do |reserv| %>
      <tr>
        <td style="padding: 10px"><% if listing.user.profilepic != nil %>
          <%=image_tag listing.user.profilepic.thumb.url, class:"listing-preview"%>
            <% else %>
              <span class="glyphicon glyphicon-picture"></span>
            <% end %></td>
        <td style="padding: 10px"><%= reserv.user.first_name%> <%= reserv.user.last_name %></td>
        <td style="padding: 10px"><%= reserv.start_date %></td>
        <td style="padding: 10px"><%= reserv.end_date %></td>
        <td style="padding: 10px"><%= reserv.num_guest %></td>
        <td style="padding: 10px"><%= reserv.currency %><%= reserv.total_price %></td>
        <td style="padding: 10px"><%= reserv.message %></td>
        <!-- <td style="padding: 10px"><#%= link_to 'Destroy', reservation_url, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<% end %>
<% end %>

