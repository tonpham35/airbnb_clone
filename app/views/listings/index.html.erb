<%= stylesheet_link_tag    "listings", :media => "all" %>

<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Preview Pic</th>
      <th>User</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Postalcode</th>
      <th>State</th>
      <th>Country</th>
      <th>No bed</th>
      <th>No room</th>
      <th>Max guest</th>
      <th>Price per day</th>
      <th>Currency</th>
      <th>Content</th>
      <th>Smoker</th>
      <th>Pets</th>
      <th>Instant book</th>
      <th>Property type</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><% if listing.photos.length > 0 %>
              <%= image_tag listing.photos.first, class:"listing-preview"%>
            <% else %>
              <span> No Pictures </span>
            <% end %></td>
        <td><%= listing.user.first_name%> <%=listing.user.last_name %></td>
        <td><%= listing.address1 %></td>
        <td><%= listing.address2 %></td>
        <td><%= listing.postalcode %></td>
        <td><%= listing.state %></td>
        <td><%= listing.country %></td>
        <td><%= listing.no_bed %></td>
        <td><%= listing.no_room %></td>
        <td><%= listing.max_guest %></td>
        <td><%= listing.price_per_day %></td>
        <td><%= listing.currency %></td>
        <td><%= listing.content %></td>
        <td><%= listing.smoker %></td>
        <td><%= listing.pets %></td>
        <td><%= listing.instant_book %></td>
        <td><%= listing.property_type %></td>
        <td><%= listing.name %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @listings %>
<br>

<%= link_to 'New Listing', new_listing_path %>
